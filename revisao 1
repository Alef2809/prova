#cauculadora
num1 = 0
num2 = 0
ope = ''
resultado = 0
while True:
   num1 = int(input('digite o primeiro numero: '))
   num2 = int(input('digite o segundo numero: '))
   ope = input('digite o operador: ')
   if ope == '+':
      resultado = num1 + num2
   elif ope == '-':
      resultado = num1 - num2
   elif ope == '/':
      resultado = num1 / num2
   elif ope == '*':
      resultado = num1 * num2
   else:
      resultado = "operação invalida"
   print(resultado)
#print
